<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="boton_normal">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/fondo_boton</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="texto_normal">
        <item name="android:fontFamily">@font/bellota_text_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="titulo">
        <item name="android:fontFamily">@font/alata</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="texto_hint">
        <item name="android:fontFamily">@font/dm_mono_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">8sp</item>
    </style>
</resources>